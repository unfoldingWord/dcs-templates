{{end}}
		padding: 1rem;
		display: flex;
		align-items: center;
	}

	.warning-alert .alert-flag:checked~.alert-close,
	.warning-alert .alert-flag:checked~.alert-content {
		display: none;
	}

	.warning-alert .alert-close {
		pointer-events: all;
		position: absolute;
		top: 2rem;
		right: 1rem;
		font-size: 28px;
		cursor: pointer;
